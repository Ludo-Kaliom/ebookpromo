{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div id="margin" class="col-md-6">
            <h1>Connexion</h1>
        </div>
        <form action="{{ path('login') }}" method="post">
            <div class="row">
                <div id="margin" class="col-md-6">
                    <label class="form-label" for="username">Email :</label>
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}"  placeholder="Votre email"/>
                </div>
            </div>
            <div class="row">
                <div id="margin" class="col-md-6">
                    <label class="form-label" for="password">Password :</label>
                    <input class="form-control" type="password" id="password" name="_password"  placeholder="Votre password"/>
                </div>
            </div>
            <div class="row">
                <div id="margin" class="col-md-6">
                    <label class="form-label" name="_remember_me">Se souvenir de moi</label>
                    <input type="checkbox" name="_remember_me"/>
                </div>
            </div>
            <br>
            {# If you want to control the URL the user is redirected to on success
            <input type="hidden" name="_target_path" value="/account"/> #}
            <div id="margin" class="col-md-6">
                <button class="btn btn-primary" type="submit">login</button>
            </div>
        </form>
    </div>
{% endblock %}