<div id="center" class="row mt-4">
    <div class="col">
        icônes partage réseaux sociaux
            <a href="{{ path('book_like', {id: book.id, slug: book.slug}) }}" class="btn btn-link js-like">
    
    
                {% if app.user and book.isLikedByUser(app.user) %}
                    <i class="fas fa-thumbs-up"></i>
                {% else %}
                    <i class="far fa-thumbs-up"></i>
                {% endif %}

            <span class="js-likes">{{ book.booklikes | length }}
            </span>
                

            <span class="js-label">
                J'aime     
            </span>
        </a>
    </div>
    <div class="col"></div>
</div>

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        function onClickBtnLike(event){
            event.preventDefault();

            const url = this.href;
            const spanCount = this.querySelector('span.js-likes');
            const icone = this.querySelector('i');

            axios.get(url).then(function(response){
                spanCount.textContent = response.data.likes;

                if(icone.classList.contains('fas')) {
                    icone.classList.replace('fas', 'far');
                } else {
                        icone.classList.replace('far', 'fas');
                }
            }).catch(function(error){
                if(error.response.status === 403) {
                    window.alert("Vous ne pouvez pas liker un livre sans être connecté !");
                } else {
                    window.alert("Une erreur s'est produite, réessayez plus tard")
                }
            })
        }

        document.querySelectorAll('a.js-like').forEach(function(link){
            link.addEventListener('click', onClickBtnLike);
        })
    </script>
{% endblock %}