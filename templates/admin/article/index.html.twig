{% extends 'base_admin.html.twig' %}

{% block title %}
    Article index
{% endblock %}

{% block body %}

    <div class="container">
        <h1>
            Liste des articles
        </h1>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped table-bordered align-middle">
                    <thead class="align-middle text-center">
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Titre
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Status
                            </th>
                            <th>
                                actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for article in articles %}
                            <tr>
                                <td>
                                    {{ article.id }}
                                </td>
                                <td>
                                    {{ article.Title }}
                                </td>
                                <td>
                                    {{ article.updated ? article.updated|date('Y-m-d H:i:s') : '' }}
                                </td>
                                <td>
                                    {{ article.status ? 'Publié' : 'Non publié' }}
                                </td>
                                <td>
                                    <a href="{{ path('article_show', {'id': article.id, 'slug': article.slug}) }}">
                                        show
                                    </a>
                                    <a href="{{ path('article_edit', {'id': article.id}) }}">
                                        edit
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">
                                    Aucun article n'a été posté
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>

    {% endblock %}
    