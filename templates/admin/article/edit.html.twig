{% extends 'base_admin.html.twig' %}

{% block title %}Edit Article{% endblock %}

{% block body %}
    <div class="container">
        <div class="row text-center">
            <h1>Editer un article</h1>
        </div>
        {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">{{ form_row(form.Title) }}
                <span class="error">{{ form_errors(form.Title) }}</span></div>
                <div class="col-md-6">{{ form_row(form.updated) }}</div>
            </div>
            <div class="row">
                <div class="col-md-12">{{ form_row(form.content) }}</div>
            </div>
            <div class="row">
                <div class="col-md-12">{{ form_row(form.status) }}</div>
            </div>   
        {{ form_rest(form) }}
            <button class="btn btn-primary">{{ button|default("Mettre à jour l'article") }}</button>
        {{ form_end(form) }}
    </div>
    <div class="container">
        <div class="row">
            <div class="col">
                <a class="btn btn-secondary" href="{{ path('article_index') }}">Retour à la liste des articles</a>
            </div> 
            {{ include('admin/article/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
