{% extends 'base_admin.html.twig' %}

{% block title %}Type{% endblock %}

{% block body %}
<div class="container">
    <h1>Tous les types de livres</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ type.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ type.name }}</td>
            </tr>
            <tr>
                <th>Actif/Inactif</th>
                <td>{{ type.status ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin/type_index') }}">back to list</a>

    <a href="{{ path('admin/type_edit', {'id': type.id}) }}">edit</a>

    {{ include('admin/type/_delete_form.html.twig') }}
</div>
{% endblock %}
