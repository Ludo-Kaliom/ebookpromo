{% extends 'base_admin.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
<div class="container">
    <h1>Listes des catégories</h1>

    <table class="table table-striped table-bordered align-middle">
        <thead class="align-middle text-center">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr class="text-center">
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.status ? 'Actif' : 'Bloqué' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('category_show', {'id': category.id, 'slug': null}) }}">Voir</a>
                    <a class="btn btn-secondary" href="{{ path('category_edit', {'id': category.id, 'slug': null}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune entrée trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
