{% extends 'base_admin.html.twig' %}

{% block title %}
    Book index
    
{% endblock %}

{% block body %}

    <div id='admin' class="container admin">
        <h1>
            Book index
        </h1>
        <div class="row">
            <div class="col-md-11">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Id
                                                            
                            </th>
                            <th>
                                Title
                                                            
                            </th>
                            <th>
                                Isbn
                                                            
                            </th>
                            <th>
                                Description
                                                            
                            </th>
                            <th>
                                Cover
                                                            
                            </th>
                            <th>
                                Normalprice
                                                            
                            </th>
                            <th>
                                Reduceprice
                                                            
                            </th>
                            <th>
                                Startdate
                                                            
                            </th>
                            <th>
                                Enddate
                                                            
                            </th>
                            <th>
                                Link
                                                            
                            </th>
                            <th>
                                Publisher
                                                            
                            </th>
                            <th>
                                Authors
                                                            
                            </th>
                            <th>
                                Totalprice
                                                            
                            </th>
                            <th>
                                Nbcomments
                                                            
                            </th>
                            <th>
                                Nblikes
                                                            
                            </th>
                            <th>
                                Status
                                                            
                            </th>
                            <th>
                                actions
                                                            
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for book in books %}
                            <tr>
                                <td>
                                    {{ book.id }}
                                </td>
                                <td>
                                    {{ book.title }}
                                </td>
                                <td>
                                    {{ book.isbn }}
                                </td>
                                <td>
                                    {{ book.description }}
                                </td>
                                <td>
                                    {{ book.cover }}
                                </td>
                                <td>
                                    {{ book.normalprice }}
                                </td>
                                <td>
                                    {{ book.reduceprice }}
                                </td>
                                <td>
                                    {{ book.startdate ? book.startdate|date('Y-m-d H:i:s') : '' }}
                                </td>
                                <td>
                                    {{ book.enddate ? book.enddate|date('Y-m-d H:i:s') : '' }}
                                </td>
                                <td>
                                    {{ book.link }}
                                </td>
                                <td>
                                    {{ book.publisher }}
                                </td>
                                <td>
                                    {{ book.authors }}
                                </td>
                                <td>
                                    {{ book.totalprice }}
                                </td>
                                <td>
                                    {{ book.nbcomments }}
                                </td>
                                <td>
                                    {{ book.nblikes }}
                                </td>
                                <td>
                                    {{ book.status ? 'Yes' : 'No' }}
                                </td>
                                <td>
                                    <a href="{{ path('book_show', {'id': book.id, 'slug': null}) }}">
                                        show
                                                                            
                                    </a>
                                    <a href="{{ path('book_edit', {'id': book.id, 'slug': null}) }}">
                                        edit
                                                                            
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="17">
                                    no records found
                                                                    
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>

    <a href="{{ path('book_new') }}">
        Create new
            
    </a>
{% endblock %}
