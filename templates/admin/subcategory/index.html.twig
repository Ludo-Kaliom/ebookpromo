{% extends 'base_admin.html.twig' %}

{% block title %}Subcategory index{% endblock %}

{% block body %}

<div class="container">
    <h1>Liste des sous-cat√©gories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for subcategory in subcategories %}
            <tr>
                <td>{{ subcategory.id }}</td>
                <td>{{ subcategory.name }}</td>
                <td>{{ subcategory.status ? 'Yes' : 'No' }}</td>
                <td>
                    {# <a href="{{ path('subcategory_show', {'id': subcategory.id}) }}">show</a> #}
                    <a class="btn btn-secondary" href="{{ path('subcategory_edit', {'id': subcategory.id, slug:null}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
